#include<stdio.h>
int main()
{
 int n;
 scanf("%d",&n);
 for(int i=n;i>=1;i--){
    for(int spaces=i+1;spaces<=n;spaces++){  //i be the row and j be the col
         printf(" ");
      }
       for(int j=1;j<=i;j++){  //water image-top will be the bottom and bottom will be the top
         printf(" * "); //mirror image-right will be the left and left will be the right
 }
 printf("\n");
 }
 return 0;
}
